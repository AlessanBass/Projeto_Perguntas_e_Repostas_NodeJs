<%- include ('partials/header.ejs') %> <!-- Importando as partials do Ejs -->
<body>

    <%- include ('partials/navbar.ejs') %>
    <div class="container"> <!-- Containner: Recurso que faz centralizar as coisas -->
        <hr>
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form action="/responder" method="post">
            <h3>Responda</h3>
            <label >Resposta:</label>
            <textarea class="form-control" name="corpo" id="" placeholder="Digite sua reposta"></textarea>
            <br>
            <input type="hidden" name="pergunta" id="" value="<%=pergunta.id%>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Repostas</h3>
        <hr>
        <% respostas.forEach (respostas =>  {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= respostas.corpo%></p>
                </div>
            </div>
        <% })%>
    </div>

</body>
<%- include ('partials/footer.ejs') %>